<h2>Create New Figure</h2>

<form method="post" action="/figures">
    
    <input type="text" id="figure_name" name="figure[name]"> <br>



     <h3> Titles </h3>
    <% @titles.each do |title| %>
    <label for="title_<%= title.id %>"><%= title.name %> </label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"> <br>
    <% end %>

    <h4> New Title </h4>
    <input type="text" id="new_title" name="title[name]">

    
   
    <h3> Landmarks </h3>
    <% @landmarks.each do |landmark| %>
    <label for="landmark_<%= landmark.id %>"><%= landmark.name %> </label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"> <br>
    <% end %>

    <h4> New Landmark </h4>
    <input type="text" id="new_landmark" name="landmark[name]">
    <input type="text" id="landmark_year_completed" name="landmark[year_completed]">


    <input type="submit" id="Create New Figure" value="Create Figure">
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
